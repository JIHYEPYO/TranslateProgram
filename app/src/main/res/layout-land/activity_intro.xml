<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".Activity.IntroActivity"
    android:background="@color/colorPrimary">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        sl:scale_base_width="400"
        sl:scale_base_height="200">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewLogoIcon"
            android:background="@mipmap/ic_launcher"
            sl:scale_width="70"
            sl:scale_height="70"
            sl:scale_left="180"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Translate Program"
            android:id="@+id/textView"
            android:singleLine="true"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            sl:scale_textsize="25"
            sl:scale_height="35"
            sl:scale_width="220"
            sl:scale_left="110"
            sl:scale_top="60"
            sl:textview_wrapcontent_direction="bottom"
            sl:textview_wrapcontent_resizesurrounded="true"
            sl:textview_wrapcontent_movesiblings="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:background="@drawable/ic_ncs_logo"
            sl:scale_width="100"
            sl:scale_height="30"
            sl:scale_top="160"
            sl:scale_left="170"/>
    </com.ssomai.android.scalablelayout.ScalableLayout>
</LinearLayout>
