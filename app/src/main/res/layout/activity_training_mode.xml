<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGray"
        android:layout_weight="1"
        android:layout_margin="15dp">

        <com.example.pyojihye.translateprogram.Movement.ModeTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ModeTextViewTraining"
            android:background="@color/colorGray"
            android:textSize="25dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGrayDark">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageViewPast"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="onPastClick" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageViewStart"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="onStartClick" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageViewFuture"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="onFutureClick" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="100%"
                android:textStyle="italic|bold"
                android:textColor="@color/colorAccent"
                android:textSize="50dp"
                android:layout_weight="2"
                android:id="@+id/numberPercent"
                android:layout_gravity="right" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>