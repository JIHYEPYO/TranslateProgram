<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".Activity.IntroActivity"
    android:background="@color/colorPrimary">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        sl:scale_base_width="200"
        sl:scale_base_height="320">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewLogoIcon"
            android:background="@drawable/icon"
            sl:scale_width="40"
            sl:scale_height="40"
            sl:scale_left="80"
            sl:scale_top="30"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Translate Program"
            android:id="@+id/textView"
            android:singleLine="true"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            sl:scale_textsize="15"
            sl:scale_height="20"
            sl:scale_width="150"
            sl:scale_left="40"
            sl:scale_top="70"
            sl:textview_wrapcontent_direction="bottom"
            sl:textview_wrapcontent_resizesurrounded="true"
            sl:textview_wrapcontent_movesiblings="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:background="@drawable/ic_ncs_logo"
            sl:scale_width="80"
            sl:scale_height="20"
            sl:scale_top="270"
            sl:scale_left="65"/>

    </com.ssomai.android.scalablelayout.ScalableLayout>
</LinearLayout>
