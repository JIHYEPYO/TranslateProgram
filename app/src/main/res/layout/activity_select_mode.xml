<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onImageTrainingClick"
        android:layout_weight="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/journal"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:onClick="onImageTrainingClick" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Training Mode"
            android:textSize="25dp"
            android:id="@+id/textViewTrainingMode"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:nestedScrollingEnabled="false"
        android:onClick="onImageViewerClick"
        android:layout_weight="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/binoculars"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:onClick="onImageViewerClick" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Viewer Mode"
            android:textSize="25dp"
            android:id="@+id/textViewViewerMode"
            android:layout_gravity="center" />

    </LinearLayout>
</LinearLayout>