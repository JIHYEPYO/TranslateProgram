<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ncslab.pyojihye.translateprogram">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true">

       <activity
        android:name="com.ncslab.pyojihye.translateprogram.Activity.IntroActivity"
        android:theme="@style/NoTitle">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
       </activity>

        <activity
            android:name="com.ncslab.pyojihye.translateprogram.Activity.LoginActivity"
            android:theme="@style/NoTitle">
        </activity>

        <activity
            android:name="com.ncslab.pyojihye.translateprogram.Activity.PathActivity"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name="com.ncslab.pyojihye.translateprogram.Activity.SelectModeActivity"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name="com.ncslab.pyojihye.translateprogram.Activity.TrainingOptionActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan">
        </activity>

        <activity
            android:name="com.ncslab.pyojihye.translateprogram.Activity.TrainingActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name="com.ncslab.pyojihye.translateprogram.Activity.ViewerActivity"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name="com.ncslab.pyojihye.translateprogram.Activity.ViewerOptionActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan">
        </activity>

        <activity
            android:name="com.ncslab.pyojihye.translateprogram.Activity.DeveloperActivity"
            android:theme="@style/AppTheme">
        </activity>

    </application>
</manifest>